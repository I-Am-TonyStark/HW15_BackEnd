<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>

    <context-param>
        <param-name>email</param-name>
        <param-value>mamalimomen1996@gmail.com</param-value>
    </context-param>

    <listener>
        <listener-class>com.mamalimomen.controllers.AppContextListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.mamalimomen.controllers.servlets.LoginServlet</servlet-class>
        <init-param>
            <param-name>course</param-name>
            <param-value>java</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>signUp</servlet-name>
        <servlet-class>com.mamalimomen.controllers.servlets.SignUpServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>changePass</servlet-name>
        <servlet-class>com.mamalimomen.controllers.servlets.ChangePasswordServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>changeInfo</servlet-name>
        <servlet-class>com.mamalimomen.controllers.servlets.ChangeInformationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>seeOwnPosts</servlet-name>
        <servlet-class>com.mamalimomen.controllers.servlets.SeeOwnPostsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>seeOthersPosts</servlet-name>
        <servlet-class>com.mamalimomen.controllers.servlets.SeeOthersPostsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>seeFollowingPosts</servlet-name>
        <servlet-class>com.mamalimomen.controllers.servlets.SeeFollowingPostsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>insertPost</servlet-name>
        <servlet-class>com.mamalimomen.controllers.servlets.InsertPostServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>signUp</servlet-name>
        <url-pattern>/sign_up</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>changePass</servlet-name>
        <url-pattern>/change_password</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>changeInfo</servlet-name>
        <url-pattern>/change_information</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>insertPost</servlet-name>
        <url-pattern>/insert_post</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>seeOwnPosts</servlet-name>
        <url-pattern>/see_own_posts</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>seeOthersPosts</servlet-name>
        <url-pattern>/see_others_posts</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>seeFollowingPosts</servlet-name>
        <url-pattern>/see_following_posts</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>15</session-timeout>
    </session-config>
</web-app>
